version: '3'
services:
    app:
        build:
            context: ./
            dockerfile: dockerfiles/app/Dockerfile
        volumes:
            - './:/var/www'
        restart: always
        ports:
            - '80:80'
            - '443:443'
            - '8080:8080'
        links:
            - redis
        depends_on:
            - redis
        environment:
            - "TZ=America/Guatemala"
    redis:
        build:
            context: ./
            dockerfile: dockerfiles/redis/redis.docker
        restart: always
    mysql:
        build:
            context: ./
            dockerfile: dockerfiles/mysql/mysql.docker
        volumes:
            - 'mysql-data:/var/lib/mysql'
        restart: always
        environment:
            - "TZ=America/Guatemala"
            - MYSQL_ROOT_PASSWORD=secret
            - MYSQL_DATABASE=core
        ports:
            - '3306:3306'
volumes:
    mysql-data:
        driver: 'local'